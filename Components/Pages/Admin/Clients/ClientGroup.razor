        <div class="row">
          <div class="col-md-12">
            @* @RenderInput("name", "customer_group_name") *@
            form_hidden('id')
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button group="button" class="btn btn-default" data-dismiss="modal">@label["close"]</button>
        <button group="submit" class="btn btn-info">@label["submit"]</button>
      </div>
    </div>
  </div>
</div>
