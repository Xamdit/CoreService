@using Service.Libraries.Helpers.Storages
@using Service.Components.Layout
@layout BlankLayout
@page "/test/localstorage"

<script suppress-error="BL9992" src='@Theme.GetAssetPath("js/helpers/localStorage.js")'></script>


@code {

  protected override async Task OnInitializedAsync()
  {
  // Save to localStorage
    await js.SetLocalAsync("user", new { Name = "John", Age = 30 });

  // Retrieve from localStorage
    var user = await js.GetLocalAsync<dynamic>("user");
    Console.WriteLine($"User: {user?.Name}, Age: {user?.Age}");

  // Remove from localStorage
    await js.RemoveLocalAsync("user");

  // Clear localStorage
    await js.ClearLocalAsync();
  }

}
