@inherits SignInComponent

@page "/client"
@page "/admin"

<form class="form w-100" novalidate="novalidate" id="kt_sign_in_form" data-kt-redirect-url="/" action="#"
      @onsubmit="HandleSubmit">
  <div class="text-center mb-11">
    <h1 class="text-dark fw-bolder mb-3">
      @label["signin"]
    </h1>
    <div class="text-gray-500 fw-semibold fs-6">
      @label["your_social_campaigns"]
    </div>
  </div>
  @if (socialSignup)
  {
    <SocialLoginRazor/>
  }

  <div class="fv-row mb-8">
    <input type="text" placeholder="Email" name="email" @bind="@Email" autocomplete="off"
           class="form-control bg-transparent"/>
  </div>
  <div class="fv-row mb-3">
    <input type="password" placeholder="Password" name="password" @bind="@Password" autocomplete="off"
           class="form-control bg-transparent"/>
  </div>
  <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
    <div></div>
    <a href="/@UserType/reset-password" class="link-primary">
      @label["forgot_password"]
    </a>
  </div>
  <div class="d-grid mb-10">
    <button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
      <ButtonIndicator ButtonLabel="@label["signin_btn"]">@label["signin_btn"]</ButtonIndicator>
    </button>
  </div>
  @if (canSignup)
  {
    <SignUp/>
  }
</form>
