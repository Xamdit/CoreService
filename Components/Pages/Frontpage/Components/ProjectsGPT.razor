<div class="mb-lg-n15 position-relative z-index-2">
  <div class="container">
    <div class="card" style="filter: drop-shadow(0px 0px 40px rgba(68, 81, 96, 0.08))">
      <div class="card-body p-lg-20">
        <div class="text-center mb-5 mb-lg-10">
          <h3 class="fs-2hx text-dark mb-5" id="portfolio" data-kt-scroll-offset="{default: 100, lg: 250}">
            Our Product
          </h3>
        </div>

        <div class="d-flex flex-center mb-5 mb-lg-15">
          <ul class="nav border-transparent flex-center fs-5 fw-bold">
            @foreach (var (title, target) in new[] { ("Latest", "#kt_landing_projects_latest"), ("Web Design", "#kt_landing_projects_web_design"), ("Mobile Apps", "#kt_landing_projects_mobile_apps"), ("Development", "#kt_landing_projects_development") })
            {
              <li class="nav-item">
                <a class="nav-link text-gray-500 text-active-primary px-3 px-lg-6 @(title == "Latest" ? "active" : "")"
                   href="#" data-bs-toggle="tab" data-bs-target="@target">
                  @title
                </a>
              </li>
            }
          </ul>
        </div>

        <div class="tab-content">
          @foreach (var id in new[] { "latest", "web_design", "mobile_apps", "development" })
          {
            <div class="tab-pane fade @(id == "latest" ? "show active" : "")" id="@($"kt_landing_projects_{id}")">
              <div class="row g-10">
                @for (var i = 0; i < 2; i++)
                {
                  <div class="col-lg-6">
                    <a class="d-block card-rounded overlay @(i == 0 ? "h-lg-100" : "")" data-fslightbox="lightbox-projects"
                       href="@($"assets/media/stock/600x600/img-{i + 1 + (id == "latest" ? 22 : 10)}.jpg")">
                      <div class="overlay-wrapper bgi-no-repeat bgi-position-center bgi-size-cover card-rounded h-250px"
                           style="background-image:url('@($"assets/media/stock/600x600/img-{i + 1 + (id == "latest" ? 22 : 10)}.jpg")')">
                      </div>
                      <div class="overlay-layer card-rounded bg-dark bg-opacity-25">
                        <i class="ki-duotone ki-eye fs-3x text-white">
                          <span class="path1"></span>
                          <span class="path2"></span>
                          <span class="path3"></span>
                        </i>
                      </div>
                    </a>
                  </div>
                }
              </div>
            </div>
          }
        </div>
      </div>
    </div>
  </div>
</div>
